Rule "Teleport to Shop"
    Event_Team(All)
    Conditions
        Any True
            Array: portals
            Condition: Distance Between
                Event Player
                Cur Elem
            <= 1.5
        == True
    Actions
        Teleport(Event Player, shop_pos)
        pvar location = -1

Rule "Teleport from Shop"
    Event_Team(All)
    Conditions
        Is Communicating Any Voice Line(Event Player) == True
    Actions
        Big Msg
            "Hello"