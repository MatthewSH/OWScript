%Event_Global
    Event
        On Global
%Event_Team(team_)
    Event
        On Each Player
        team_
        All
%create_portal(pos, type_, color_, name_)
    Create Effect
        VisibleTo: Everyone
        Type: type_
        Color: color_
        Position: pos
        Radius: 1.5
        Reevaluation: None
%UpgradePortal(pos)
    create_portal(pos, Good Aura, Yellow, "Upgrades")
    portals.push(pos)

