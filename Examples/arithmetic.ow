rule("Arithmetic Expressions & Time Manipulation") {
	event {
		Ongoing - Each Player;
		All;
		All;
	}

	actions {
		Set Player Variable At Index(Event Player, A, 0, Vector(Sine From Degrees(Multiply(Value In Array(Player Variable(Event Player, A), 1), Divide(360, Count Of(Allowed Heroes(Event Player))))), Cosine From Degrees(Multiply(Value In Array(Player Variable(Event Player, A), 1), Divide(360, Count Of(Allowed Heroes(Event Player))))), 0));
		Set Player Variable At Index(Event Player, A, 1, Add(Value In Array(Player Variable(Event Player, A), 1), 1));
		Wait(0.016)
		Wait(3.5)
		Wait(21.0)
	}
}