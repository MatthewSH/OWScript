rule("Check if being goomba'd") {
	event {
		Ongoing - Each Player;
		All;
		All;
	}

	conditions {
		Players Within Radius(Eye Position(Event Player), 1.5, Opposite Team Of(Team Of(Event Player))) == True;
		Altitude Of(Players Within Radius(Eye Position(Event Player), 1.5, Opposite Team Of(Team Of(Event Player)))) > Altitude Of(Event Player);
	}

	actions {
		Kill(Event Player, Players Within Radius(Eye Position(Event Player), 0.5, Opposite Team Of(Team Of(Event Player))));
	}
}