rule("Create Portal") {
   Event {
      Ongoing - Each Player;
      All;
      All;
   }

   Actions {
      Create Effect(Event Player, Good Aura, Yellow, Vector(0, 1, 2), 10, Visible To, Position, And Radius);
   }
}

rule("Teleportation") {
   Event {
      Ongoing - Each Player;
      All;
      All;
   }

   Conditions {
      Array Contains(Players Within Radius(Vector(0, 1, 2), 10, All, Surfaces), Event Player) == True;
   }

   Actions {
      Teleport(Event Player, Vector(3, 4, 5));
   }
}